{% comment %} {{ section.blocks.settings.image }} {% endcomment %}
{% for block in section.blocks %}
  <div class="customimage-block">
    <img src="{{ block.settings.image | image_url }}" width="100%" height="100%" loading="lazy" />
  </div>
{% endfor %}

{% schema %}
  {
    "name": "Custom Image Block",
    "blocks": [
      {
        "type":"image",
        "name":"image block",
        "settings":[
          {
            "type":"image_picker",
            "label":"Image Picker",
            "id":"image"
          }
        ]
      }
    ]
  }
{% endschema %}